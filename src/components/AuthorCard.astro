---
const {author} = Astro.props
console.log(author)
---

<style lang="scss">
	article {
		
		display:grid;
		justify-items:center;
		grid-template-columns:1fr;
		grid-template-rows:repeat(2, calc(200px / 2)) 1fr;
	}
	article > .flex-col {
		background:white;
		border:1px solid #ddd;
		grid-column:1/-1;
		border-radius:4px;
		padding:2rem 1rem 1rem;
		grid-row:2/4;
	}
	header {
		position:relative;
		grid-column:1/-1;
		background-image: url(/assets/author-headshot-decoration.svg);
		background-repeat:no-repeat;
		background-size:contain;
		background-position:center top;

		grid-row:1/3;

		width:210px;
		display:grid;
		grid-template-rows:1fr auto 1em;
		grid-template-columns:100%; 
		justify-items:center;
		padding-top:30px;
		padding:20px;
		padding-block-end:20px;

		font-size: 28px;
		color:var(--green);
	}
	.headshot {
		grid-row:1/3;
		margin-inline:auto;
		grid-column:1/-1;
		width:130px;
		img {
			border-radius:999px;
			width:100%;
			background:white;
		}	
	}
	.name {
		white-space:nowrap;
		grid-row:2/3;
		grid-column:1/-1;
		text-align: center;
		width:fit-content;
		margin:0;
		border:1px solid var(--green);
		border-radius:4px;
		background:white;
		padding:.05rem .25em;

	}
	.screenshot{
		border-radius:4px;
		border: 1px solid var(--purple);
		aspect-ratio:1.8;
		object-fit:cover;
		object-postion:0 0%;
	}
	.desc {
		margin:0;
		font-size: 16px;
		line-height: 1.4;
		margin-block-end:.25rem;
	}
	.flex-col{
		display:flex;
		flex-direction:column;
	}
	.gap-sm{
		gap:.8rem;
	}
</style>

{author && (
	<article>
		<header>
			<div class="headshot">
				<img src={author.frontmatter.headshot} alt={`${author.frontmatter.author}'s headshot`} />
			</div>
			<h4 class="name">
				{author.frontmatter.author}
			</h4>
		</header>
		<div class="flex-col gap-sm">
			<img 
				class="screenshot" 
				src={author.frontmatter.largeImg}
				alt={`${author.frontmatter.author}'s headshot`}
			/>
			<p class="desc">{author.frontmatter.description}</p>
			<a class="btn" href={author.frontmatter.website}>
				View Website
			</a>
		</div>
	</article>
)}
